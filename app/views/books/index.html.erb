<p id="notice"><%= notice %></p>

<h1>Books</h1>
<button type="button">
  <%= link_to 'Create a New Book', new_book_path %>
</button>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price <small><small>(USD)</small></small></th>
      <th>Published Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= number_to_currency(book.price) %></td>
        <td><%= book.published_date %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


